
Options +FollowSymlinks

# Prevent Directoy listing
Options -Indexes

# Prevent Direct Access to files
<FilesMatch "\.(ini|log)">
 Order deny,allow
 Deny from all
</FilesMatch>

RewriteEngine on
RewriteBase /

# Update the domain name, enable this line and comment out the other rewrite rules to set up a permanent redirect for pushing live
# RewriteRule ^(.*)$ http://www.example.com/$1 [r=301,nc]

RewriteCond $1 !\.(gif|jpg|png|jpeg|css|js|ico|swf)$ [NC]
RewriteCond $1 !^(index\.php|robots\.txt)
RewriteCond $1 !(assets|uploads|themes)
RewriteRule ^(.*)$ index.php/$1 [L]
